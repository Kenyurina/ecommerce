extends home2.pug

block auth
    div.container-fluid
        div.row
        h1 Signup
        form(action="/signup" method="POST" class="card-body")
            div(class="form-group")
                input(type="hidden" class="form-control" name="id" value="0")
                label(for="exampleInputPassword1") Nombre
                input(type="text" class="form-control"  name="nombre" placeholder="Nombre" required)
            div(class="form-group")
                label(for="exampleInputPassword1") Apellido
                input(type="text" class="form-control"  name="apellido" placeholder="Apellido" required)
            div(class="form-group")
                label(for="exampleInputPassword1") Edad
                input(type="text" class="form-control"  name="edad" placeholder="Apellido" required)
            div(class="form-group")
                label(for="exampleInputPassword1") Genero
                input(type="text" class="form-control"  name="genero" placeholder="Apellido" required)
            div(class="form-group")
                label(for="exampleInputEmail1") Email
                input(type="text" class="form-control" name="email" placeholder="Email" required)
            div(class="form-group")
                label(for="exampleInputPassword1") Password
                input(type="password" class="form-control"  name="pass" placeholder="Password" required)
            div(class="form-group")
                label(for="exampleInputPassword1") Telefono
                input(type="text" class="form-control"  name="telefono" placeholder="Apellido" required)
            div(class="form-group")
                label(for="exampleInputPassword1") Ciudad
                input(type="text" class="form-control"  name="ciudad" placeholder="Apellido" required)
            div(class="form-group")
            button(type="submit" class="btn btn-primary") Submit