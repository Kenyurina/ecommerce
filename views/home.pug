extends layout.pug

block content
    div.wrapper
        //- Navbar
        nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
            //- Boton de la izquierda 
            ul.navbar-nav
                li.nav-item
                    a(class="nav-link" data-widget="pushmenu" href="#" role="button")
                        i.fas.fa-bars
                li.nav-item.d-none.d-sm-inline-block
                    a(href="#" class="nav-link") Home
                li.nav-item.d-none.d-sm-inline-block
                    a(href="#" class="nav-link") Contacto
            //-Botones de la derecha 
            ul.navbar-nav.ml-auto
                li.nav-item.dropdown
                    a(class="nav-link" data-toggle="dropdown" href="#")
                        i.far.fa-comments
                    div.dropdown-menu.dropdown-menu-lg.dropdown-menu-right
                        a(href="#" class="dropdown-item")
                            //-Message Start 
                            div.media
                                img(src="dist/img/user1-128x128.jpg" alt="User Avatar" class="img-size-50 mr-3 img-circle")
                                div.media-body
                                    h3.dropdown-item-title Brad Diesel
                                        span.float-right.text-sm.text-danger
                                            i.fas.fa-star
                                    p.text-sm Call me whenever you can...
                                    p.text-sm.text-muted
                                        i.far.fa-clock.mr-1 4 Hours Ago
                        //- Message End 
                        div.dropdown-divider
                        a(href="#" class="dropdown-item")
                            //- Message Start 
                            div.media
                                img(src="dist/img/user8-128x128.jpg" alt="User Avatar" class="img-size-50 img-circle mr-3")
                                div.media-body
                                    h3.dropdown-item-title John Pierce
                                        span.float-right.text-sm.text-muted
                                            i.fas.fa-star
                                    p.text-sm I got your message bro
                                    p.text-sm text-muted
                                        i.far.fa-clock.mr-1 4 Hours Ago
                        //- Message End 
                        div.dropdown-divider
                        a(href="#" class="dropdown-item")
                            //- Message Start 
                            div.media
                                img(src="dist/img/user3-128x128.jpg" alt="User Avatar" class="img-size-50 img-circle mr-3")
                                div.media-body
                                    h3.dropdown-item-title Nora Silvester
                                        span.float-right.text-sm.text-warning
                                            i.fas.fa-star
                                    p.text-sm The subject goes here
                                    p.text-sm text-muted 
                                        i.far.fa-clock.mr-1 4 Hours Ago
                        //- Message End 
                        div.dropdown-divider
                        a(href="#" class="dropdown-item dropdown-footer") See All Messages
                li.nav-item.dropdown
                    a(class="nav-link" data-toggle="dropdown" href="#")
                        i.far.fa-bell

        //- dashboard 
        aside.main-sidebar.sidebar-dark-primary.elevation-4
            a(href="" class="brand-link")
                img(src="/static/img/logo.png" alt="Logo" class="brand-image img-circle elevation-3"
                style="opacity: .8")
                span.brand-text.font-weight-light Mi eCommerce
            div.sidebar
                div.user-panel.mt-3.pb-3.mb-3.d-flex
                    div.image
                        img(src="/static/img/user3-128x128.jpg" class="img-circle elevation-2" alt="User Image")
                    div.info
                        a(href="#" class="d-block") Kenyuri Camino
                nav.mt-2
                    ul(class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false")
                        li.nav-item.has-treeview.menu-open
                            a(href="#" class="nav-link")
                                i.nav-icon.fas.fa-shopping-bag
                                p Mi eCommerce
                                    i.right.fas.fa-angle-left
                            ul.nav.nav-treeview
                                li.nav-item
                                    a(href="/usuario" class="nav-link")
                                        i.fa.fa-user.nav-icon
                                        p Usuarios
                                li.nav-item
                                    a(href="/productos" class="nav-link")
                                        i.fas.fa-shopping-cart.nav-icon
                                        p Productos
                                li.nav-item
                                    a(href="./" class="nav-link")
                                        i.fa.fa-shopping-bag.nav-icon
                                        p Ordenes

        //- contenido 
        div.content-wrapper
            div.content-header
                div.container-fluid
                    div.row.mb-2
                        div.col-sm-6
                            block user
                            
        //- footer
        footer.main-footer
                strong Copyright &copy; 2020 
                a(href="") Ubiset C.A . All rights reserved.




